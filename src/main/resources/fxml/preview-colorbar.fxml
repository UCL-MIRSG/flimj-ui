<?xml version="1.0" encoding="UTF-8" ?>

<?import javafx.geometry.Insets ?>
<?import javafx.scene.control.Label ?>
<?import javafx.scene.image.ImageView ?>
<?import javafx.scene.layout.HBox ?>
<?import javafx.scene.layout.Pane ?>
<?import javafx.scene.layout.VBox ?>
<?import javafx.scene.shape.Polygon ?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="flimlib.flimj.ui.controller.PreviewCtrl$CBPopOverCtrl">
  <children>
    <VBox fx:id="cbValCursor" alignment="TOP_CENTER">
      <children>
        <Label fx:id="cbValLabel" text="0.0" />
        <Polygon points="-7, 0, 7, 0, 0, 6" stroke="BLACK" strokeType="INSIDE" />
      </children>
    </VBox>
    <HBox>
      <children>
        <ImageView fx:id="cbImageView" fitHeight="10.0" fitWidth="200.0" pickOnBounds="true">
          <HBox.margin>
            <Insets left="10.0" right="10.0" />
          </HBox.margin>
        </ImageView>
      </children>
      <VBox.margin>
        <Insets />
      </VBox.margin>
    </HBox>
    <HBox>
      <children>
        <Label fx:id="cbMinValLabel" text="0.0" />
        <Pane HBox.hgrow="ALWAYS" />
        <Label fx:id="cbMaxValLabel" text="0.0" />
      </children>
    </HBox>
  </children>
  <padding>
    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
  </padding>
</VBox>
